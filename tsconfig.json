{
  "compilerOptions": {
    "target": "es2016",
    "rootDir": "./src",
    "module": "commonjs",
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./src/test", "./src/**/*.test.ts"]
}
